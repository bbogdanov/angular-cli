{
  "$schema": "http://json-schema.org/schema",
  "$id": "ng-cli://commands/definitions.json",

  "definitions": {
    "architect": {
      "properties": {
        "project": {
          "type": "string",
          "description": "The name of the project to build.",
          "$default": {
            "$source": "argv",
            "index": 0
          }
        },
        "configuration": {
          "description": "Specify the configuration to use.",
          "type": "string",
          "aliases": [
            "c"
          ]
        },
        "prod": {
          "description": "Flag to set configuration to 'production'.",
          "type": "boolean"
        }
      }
    },
    "base": {
      "type": "object",
      "properties": {
        "help": {
          "type": ["boolean", "string"],
          "description": "Shows a help message. Use '--help=json' as a value to output the help in JSON format.",
          "default": false
        }
      }
    },
    "schematic": {
      "properties": {
        "dryRun": {
          "type": "boolean",
          "default": false,
          "aliases": [ "d" ],
          "description": "Run through without making any changes."
        },
        "force": {
          "type": "boolean",
          "default": false,
          "aliases": [ "f" ],
          "description": "Forces overwriting of files."
        },
        "interactive": {
          "type": "boolean",
          "default": "true",
          "description": "Disables interactive inputs (i.e., prompts)."
        }
      }
    }
  }
}
